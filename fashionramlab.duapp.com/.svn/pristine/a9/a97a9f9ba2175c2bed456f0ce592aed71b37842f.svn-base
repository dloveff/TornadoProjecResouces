
<!doctype html>  
<html>  
<head>  
<meta charset="utf-8">  
<title>标签</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
<link rel="stylesheet" href="css/jquery.mobile-1.4.0-rc.1.min.css" />
<script src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
<script src="js/jquery.mobile-1.4.0-rc.1.min.js"></script>
<script type="text/javascript">

$(document).on("pagebeforecreate",function(event){
  alert("触发 pagebeforecreate 事件！");
    findtag();
});
function findtag(){
      $.ajax({
          type:'GET',
          url:'/mptags',
          success:function(data){
              $(data).find('tags').each(function(){
                  tagselement(this);
              });
          }
    });
}
function tagselement(ele){
    $(ele).children("tag").each(function(){
          var id = $(this).attr("id");
          var name = $(this).attr("name");
          $("#mpcms_taglist").append('<ul data-role="listview"><li id="'+id+'">'+ name +'</li></ul>');
          tagselement(this);
    });
}
 </script>
</head>  
<body>  
<div data-role="page" id="demo-page" data-theme="a" data-url="demo-page">
    <div id="mpcms_taglist" role="main" data-role="content">
    </div>
</div>
</div>  
</body>  
</html>  