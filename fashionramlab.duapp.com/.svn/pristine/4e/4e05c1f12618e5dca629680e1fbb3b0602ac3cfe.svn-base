 <div id="dialog-console_module_cms" title="新增" style="display:none">
	<label>常用标签<select class="tagList"  id="tags" ></select></label>                                                        <!--标签-->
	<label>标题<input type="text" id="title" style="width: 300px;height: 30px;"/></label>                                        <!--标题-->
	<label>优先级<input type="text" id="priority"  value="1" style="width: 300px;height: 30px;"/></label>                       <!--优先级-->
    <label>概述<input type="text" id="summary"  style="width: 300px;height: 30px;"/></label>                                  <!--概述-->
    <label>缩略图<input type="text" id="thumb"  style="width: 300px;height: 30px;"/></label>                                 <!--缩略图-->
