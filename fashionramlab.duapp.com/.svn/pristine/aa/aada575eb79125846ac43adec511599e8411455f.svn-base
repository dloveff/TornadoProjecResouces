function findListTag(){
    var mpid=$("#mpid").val();
    $.ajax({
        type:'GET',
        url: '/mptags/'+mpid,
        success:function(date){
           arrfun(date);
        }
    });
}

function arrfun(date){
  $(date).find("tags").each(function(){
          var aid = $(this).children("tag").attr("id");
          var aname = $(this).children("tag").attr("name");
          addelement(aname,aid);
          $(this).children("tag").children("tag").each(function(){
             id = $(this).children("tag").attr("id");
             name = $(this).children("tag").attr("name");
             addelement(name,id);

          });

	});



}

function addelement(name,id){
    $("#body").append("<tr>" +
         "<td>" +name+"</td>" +
         "<td>" +id+"</td>" +
         "</tr>"
    )
}