		   url: '/myimg',
		   success:function(date){
           	$("#images option").remove();
		   $(date).find("images").children("image").each(function(){
				    var names = $(this).text();
                    var name = $(this).text();
					var pa = $('<option />');
					pa.text(names);
                    pa.val(name);
				    $("#images").append(pa);

				   });

		    	}
		   });
}
