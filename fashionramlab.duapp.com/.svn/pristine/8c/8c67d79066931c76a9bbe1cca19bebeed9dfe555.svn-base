body {
    width: 960px;
    padding: 10px;
    margin: 0 auto;
    background-color: #cccccc;
}

body > header {
    display: block;
    margin: 0 auto;
    background-color: #f47d31;
    padding: 10px;
    border: 3px solid white;
    border-bottom: none;
}

body > footer {
    display: block;
    clear: both;
    border: 3px solid white;
    background-color: #f47d31;
    padding: 10px;
    text-align: right;
    border-top: none;
}

input {
    border: 1px solid gray;
}

button {
    border-radius: 4px;
    border: 1px solid gray;
}

article > header {
    background-color: #0072C6;
    padding: 3px 15px;
    margin-bottom: 10px;
}

article > header > h3 {
    -webkit-filter:invert(100%);
    -moz-filter:invert(100%);
    -o-filter:invert(100%);    
}

article > header * {
    margin-right: 15px;
    vertical-align: middle;
}

.container {
    background-color: #888;
    padding: 0;
    border: none;
    position: relative;
    vertical-align: bottom;
    overflow: hidden;
    clear: both;
}

.container * {
    position: relative;
}

.west * {
    margin: 0 auto;
    padding: 0;
}

.west {
    width: 196px;
    display: block;
    float: left;
    background-color: #888;
    padding: 0;
    border: 3px solid white;
    margin: 0 auto;

    margin-bottom: -99999px;
    padding-bottom: 99999px;

    min-height: 200px;
    height: auto !important;
}

.center {
    display: block;
    padding: 10px;
    padding-top: 0;
    background-color: #f47d31;
    /*margin-left: 202px;*/
    overflow: hidden;
    border: 3px solid white;
    border-left: none;
    background-color: white;

    margin-bottom: -99999px;
    padding-bottom: 99999px;
    
    min-height: 200px;
    height: auto !important;
}

.west li {
    display: block;
    margin: 0 auto;
    border-bottom: 3px solid #fff;
    padding: 10px;
    font-weight: bold;
}

.west li > a {
    text-decoration: none;
}

.west h3 {
    text-align: center;
    padding: 10px;
}

.circles-list {
    margin-top: 50px;
}

form > p {
    padding: 20px;
}

form > p > * {
    vertical-align: top;
}

.left-flow-wrapper {
    line-height: 2em;
}

.left-flow-wrapper > div {
    float: left;
    padding: 5px;    
}

.orange-button button {
    background-color: #e16b11;
}

.orange-button img, .orange-button div {
    -webkit-filter:invert(100%);
    -moz-filter:invert(100%);
    -o-filter:invert(100%);
}

.light-blue-button button {
    background-color: #8ea89d;
}

.light-blue-button img, .light-blue-button div {
    -webkit-filter:invert(100%);
    -moz-filter:invert(100%);
    -o-filter:invert(100%);
}

.purple-button button {
    background-color: #574052;
}

.purple-button img, .purple-button div {
    -webkit-filter:invert(100%);
    -moz-filter:invert(100%);
    -o-filter:invert(100%);
}

.left-flow-button-list-wrapper {
    padding: 10px;
}

.left-flow-button-list-wrapper button {
    float: left;
    padding: 5px;
    border: none;
    width: 120px;
    height: 100px;
    position: relative;
    vertical-align: bottom;
    margin-right: 20px;
    margin-bottom: 20px;
}

.left-flow-button-list-wrapper button > img {
    width: 48px;
    height: 48px;
    position: absolute;
    left: 15px;
    top: 15px;
}

.left-flow-button-list-wrapper button > div {
    font-size: 1.5em;
    font-weight: bolder;
    text-align: right;
    position: absolute;
    margin-right: 0;
    width: 90%;
    top: 70%;    
}


.clear-flow {
    clear: both;
}
