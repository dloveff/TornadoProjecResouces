<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>添加博客</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no"/>
    <link id="bs-css" href="css/shop.css" rel="stylesheet">
   <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script src="ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="js/ajaxfileupload.js"></script>
    <script type="text/javascript">
        function add_article() {
            doc = $.parseXML('<article/>');
            var editor1 = CKEDITOR.instances.editor1.getData()
            doc.documentElement.appendChild(create_node('title', $("#title").val()));
            doc.documentElement.appendChild(create_node('tag', $("#tag").val()));
            doc.documentElement.appendChild(create_node('priority', $("#priority").val()));
            doc.documentElement.appendChild(create_node('content', editor1));
            xmldocument = new XMLSerializer().serializeToString(doc);
            $.ajax({
                type: 'POST',
                url: '/openerp/article',
                data: xmldocument,
                statusCode: {
                    200: function () {
                        alert("添加成功");
                        location.href = "http://oerp.sinaapp.com/static/ListBolg.html";
                    }, 500: function () {
                        alert("添加失败");

                    }
                }
            });

        }
        function create_node(tag, name) {
            e = doc.createElement(tag);
            e.appendChild(doc.createCDATASection(name));
            return e;
        }

        function upload() {

            $.ajaxFileUpload({
                fileElementId: 'file',
                url: '/openerp/upload',
                success: function(data) {
                     alert($(data).find("image").attr("src"));
                     $("#imagesShow").text("上传成功").css({"color":"red"});
                    findListIamges()
			   },error: function(XMLHttpRequest, textStatus, errorThrown) {
                     $("#imagesShow").text("上传失败").css({"color":"red"});
               }
			});
        }
        function addsection(){
             CKEDITOR.instances.section1.content.setData  //insertHtml('<img src='+$("#images").val()+'>')   //append('<img src='+$("#images").val()+'>') //
        }

//查看图片列表
function findListIamges(){
	$.ajax({
		   type:'GET',
		   url: '/openerp/myimg',
		   success:function(date){
               	$("#images option").remove();
                $(date).find("images").children("image").each(function(){
                        var names = $(this).text();
                        var name = $(this).text();
                        var pa = $('<option />');
                        pa.text(names);
                        pa.val(name);
                        $("#images").append(pa);
                       });

                    }
		   });
}
    </script>
    <style type="text/css">
        body {
            padding-bottom: 40px;

        }

        .sidebar-nav {
            padding: 9px 0;
        }
    </style>

</head>

<body>
<div class="container-fluid">
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header well" data-original-title>
                <h2><i class="icon-edit"></i> 添加博客</h2>

                <div class="box-icon">
                </div>
            </div>
            <div class="box-content">
                <form class="form-horizontal" id="addBolg">
                    <fieldset>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">标题</label>

                            <div class="controls">
                                <input class="input-xlarge focused" name="title" id="title" type="text">
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">标签</label>

                            <div class="controls">
                                <input class="input-xlarge focused" name="tag" id="tag">
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">优先级</label>

                            <div class="controls">
                                <input class="input-xlarge focused" name="priority" id="priority">
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="focusedInput">上传图片</label>

                            <div class="controls">
                                <form enctype="multipart/form-data">
                                <!--上传图片-->
                                <input type="file" name="file" id="file"/>&nbsp;&nbsp;&nbsp;&nbsp;
                                <input type="button" value="上传"  onclick="upload()"/>
                                </form>
                                <span id="imagesShow"></span>
                                <label>图片<select id="images">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="button" value="插入" onclick="addsection();" ></select></label>
                                </p>

                            </div>
                        </div>
                        <!--<div>-->
                                <!--<textarea name="section1"></textarea>-->
                        <!--</div>-->
                            <div id="section1">
                            <script>
                                CKEDITOR.appendTo('section1'

                                );

                            </script>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-primary" onClick="add_article()">添加</button>
                            <button class="btn">取消</button>
                        </div>
                    </fieldset>
                </form>

            </div>
        </div>

    </div>


</div>
</div>

</div>
</body>
</html>
