	<script type="text/javascript">
$(function(){
    $("#reg").click(function(){
    xmldom = $.parseXML("<users/>");
		na = $.parseXML("<name>" + $("#ereg-email").val() + "</name>").firstChild.cloneNode(true);
		pa = $.parseXML("<pass>" + $("#ereg-pwd").val()+ "</pass>").firstChild.cloneNode(true);
		xmldom.firstChild.appendChild(na);
		xmldom.firstChild.appendChild(pa);
		date = (new XMLSerializer().serializeToString(xmldom));
		alert(date);
		 $.ajax({
			    type: 'POST',
			   url: 'http://hellokittyweb.sinaapp.com/python',
			   async: false,
			   data:date,
			   success: function(data,status,xhr) {
				alert(data);
			   }

			});
    });


});

$(function(){

 $("#ereg-email").blur(function(){
			if($("#ereg-email").val()==""){$("#email").html("<img src='imges/bu1.png'/>");}
            else{$("#email").html("<img src='imges/bu2.png'/>");}
		});
		 $("#ereg-pwd").blur(function(){
			if($("#ereg-pwd").val()==""){$("#ereg").html("<img src='imges/bu1.png'/>");}
            else{$("#ereg").html("<img src='imges/bu2.png'/>");}
		});
         $("#ereg-repwd").blur(function(){
			if($("#ereg-repwd").val()==""){$("#repwd").html("<img src='imges/bu1.png'/>");}
			if($("#ereg-pwd").val()!=$("#ereg-repwd").val()){$("#repwd").html("<img src='imges/bu1.png'/>");}
			else{$("#repwd").html("<img src='imges/bu2.png'/>");}
		});

});

</script>
	
	
