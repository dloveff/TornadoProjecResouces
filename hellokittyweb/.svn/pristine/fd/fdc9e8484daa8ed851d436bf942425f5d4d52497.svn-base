<script>
$('#reg-box ul').delegate('li', 'click', function(e){
	$(e.target).addClass('current').siblings().removeClass('current');
	if($(e.target).hasClass('email')){
		$('#mobile-reg').hide();
		$('#email-reg').show();
	}else{
		$('#email-reg').hide();
		$('#mobile-reg').show();
	}
});
</script>
